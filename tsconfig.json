{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "removeComments": true,
        "target": "es5",
        "resolveJsonModule": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "lib": ["ESNext.Array", "DOM"],
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src",
        "types",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}